<h1>Register</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
    <% resource.errors.full_messages_for(:first_name).each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
    

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
    <% resource.errors.full_messages_for(:last_name).each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <% resource.errors.full_messages_for(:email).each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% resource.errors.full_messages_for(:password).each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <% resource.errors.full_messages_for(:password_confirmation).each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Register" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
