<%= render "partials/header" %>
<main class="flex-1 flex pb-20 lg:pb-0">
  <%= render "partials/navigation", page: "Dashboard" %>
  <section class="flex-1 p-5 lg:px-10 max-w-full overflow-x-auto">
    <%= render "partials/alerts" %>

    <!-- Title -->
    <h1 class="font-bold text-secondary">Account Information</h1>
    <h2 class="text-3xl lg:text-4xl mb-2 font-bold ">Edit Profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <!-- Account Details -->
      <h3 class="mt-5 mb-3 text-xl lg:text-2xl font-bold text-neutral">Account Details</h3>

      <div class="grid md:grid-cols-2 gap-3 px-5">

        <div>
          <%= f.label :first_name, "First Name",
            class: "block py-2 text-lg lg:text-xl" %>
          <%= f.text_field :first_name,
            class: "w-full rounded-xl text-lg lg:xl" %>
          <% resource.errors.full_messages_for(:first_name).each do |msg| %>
            <p class="p-2 text-error"><%= msg %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :last_name, "Last Name",
            class: "block py-2 text-lg lg:text-xl" %>
          <%= f.text_field :last_name,
            class: "w-full rounded-xl text-lg lg:xl" %>
          <% resource.errors.full_messages_for(:last_name).each do |msg| %>
            <p class="p-2 text-error"><%= msg %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :email, "Email",
            class: "block py-2 text-lg lg:text-xl" %>
          <%= f.text_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "w-full rounded-xl text-lg lg:xl" %>
          <% resource.errors.full_messages_for(:email).each do |msg| %>
            <p class="p-2 text-error"><%= msg %></p>
          <% end %>
        </div>
      </div>

      <!-- Change Password -->
      <h3 class="mt-10 mb-3 text-xl lg:text-2xl font-bold text-neutral">Change Password</h3>
      <div class="grid md:grid-cols-2 gap-5 px-5">

        <div>
          <%= f.label :password, "Password",
            class: "block py-2 text-lg lg:text-xl" %>
          <%= f.password_field :password, 
            autocomplete: "new-password",
            placeholder: "Enter new password",
            class:"w-full rounded-xl text-lg lg:xl" %>
          <% resource.errors.full_messages_for(:password).each do |msg| %>
            <p class="p-2 text-error"><%= msg %></p>
          <% end %>
        </div> 

        <div>
          <%= f.label :password_confirmation, "Password Confirmation",
            class: "block py-2 text-lg lg:text-xl" %>
          <%= f.password_field :password_confirmation, 
            autocomplete: "new-password",
            placeholder: "Confirm new password",
            class:"w-full rounded-xl text-lg lg:xl" %>
          <% resource.errors.full_messages_for(:password_confirmation).each do |msg| %>
            <p class="p-2 text-error"><%= msg %></p>
          <% end %>
        </div>
      </div>

      <!-- Confirm Changes -->
      <h3 class="mt-10 mb-3 text-xl lg:text-2xl font-bold text-neutral">Confirm Changes</h3>
      <div class="px-5">
        <%= f.label :current_password, "Current Password",
          class: "block py-2 text-lg lg:text-xl" %>
        <%= f.password_field :current_password,
          autocomplete: "current-password",
          placeholder: "Enter current password",
          class: "w-full rounded-xl text-lg lg:xl" %>
        <% resource.errors.full_messages_for(:current_password).each do |msg| %>
          <p class="p-2 text-error"><%= msg %></p>
        <% end %>
      </div>

      <div class="mt-10 flex justify-between">
        
        <% if resource.role == "trader" %>

          <%= link_to "Cancel", trader_dashboard_path,
            class: "btn btn-secondary" %>

        <% else %>

          <%= link_to "Cancel", admin_dashboard_path,
            class: "btn btn-primary" %>

        <% end %>

        <%= f.submit "Update",
          class: "btn btn-primary" %>
      </div>

    <% end %>

    <div class="divider"></div>

    <label for="delete-modal" class="btn btn-error btn-block modal-button">Delete Account</label>

    <input type="checkbox" id="delete-modal" class="modal-toggle" />
    <div class="modal">
      <div class="modal-box relative">
        <label for="delete-modal" class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</label>
        <h3 class="text-lg font-bold">Confirm Delete Account</h3>
        <p class="py-4">All your stock trading activities will be permanently removed and deleted from the database.
          Proceed?</p>
        <%= button_to "Proceed", registration_path(resource_name), 
          method: :delete,
          class: "my-3 btn btn-error" %>
      </div>
    </div>
  </section>
</main>