<h1>Admin Dashboard</h1>
<%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete } %>
<%= render "partials/navigation" %>
<div>
  <p><%= "#{current_user.last_name}, #{current_user.first_name}" %></p>
  <p><%= current_user.role.upcase %></p>
  <%= link_to "Edit", user_edit_path(current_user.role) %>
</div>

<% if pending_count(@traders) != 0 %>
  <h2>Notice</h2>
  <div>
    <p><strong><%= pending_count(@traders) %> pending</strong> trader <%= "account".pluralize(pending_count(@traders)) %> waiting for approval. 
      <%= link_to "Resolve", accounts_path %>
    </p>
  </div>
<% end %>

<h2>Statistics</h2>
<div>
  <h3>Accounts <%= @traders.count %></h3>
  <p>Pending <%= pending_count(@traders) %></p>
  <p>Approved <%= approved_count(@traders) %></p>
  <%= link_to "See Accounts", accounts_path  %>
</div>

<div>
  <h3>Transactions <%= @transactions.count %></h3>
  <p>Buy <%= @transactions.buy.count %></p>
  <p>Sell <%= @transactions.sell.count %></p>
  <%= link_to "See Transactions", admin_transactions_path %>
</div>
