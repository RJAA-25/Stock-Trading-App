<h1>Your Transactions</h1>
<%= render "partials/navigation" %>

<% @transactions.each do |transaction| %>
  <p>Transaction No: <%= transaction.id %></p>
  <p>Name of stock: <%= set_stock(@stocks, transaction.stock_id).name %></p>
  <p>Number of stocks: <%= transaction.quantity %></p>
  <p>Type: <%= transaction.action %></p>
<% end %>
