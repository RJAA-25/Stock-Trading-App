<%= form_with(url: sell_transaction_path(@stock), class: "flex-1") do |f| %>

  <%= f.number_field :sell,
    step: 0.1, min: 0.1,
    placeholder: "Sell #{@stock.symbol} stocks",
    class: "w-full rounded-xl text-center" %>

  <%= f.submit "Sell",
    class:"my-3 btn btn-primary btn-block" %>

<% end %>