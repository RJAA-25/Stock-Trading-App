<div class="my-3 p-5 bg-info border rounded-xl">
  <h3 class="text-xl lg:text-2xl border-b-2 border-primary pb-3 font-bold"><%= title %></h3>
  
  <% pending = check[:pending] %>

  <% if pending %>

    <% count = pending.count %>
		<p class="my-3">There <%= count == 1 ? "is" : "are" %> <%= count %> pending trader <%= "account".pluralize(count) %> waiting for approval</p>

    <div class="mt-3 flex justify-end">
		  <%= link_to "Resolve", accounts_path,
        class: "btn btn-outline btn-primary" %>
    </div>

  <% end %>

  <% stock = check[:stock] %> 
  <% property = check[:property] %>
  
  <% if stock %>
    <p class="my-3">Before anything else, consider the following:</p>
    <ul>
			<li class="flex items-center gap-3 py-3">
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
            <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
          </svg>
        </span>
        <p>Your account balance is <%= format_currency(current_user.balance) %></p>
      </li>
    
        <% if property %>

					<li class="flex items-center gap-3 py-3">
            <span>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
              </svg>
            </span>
            <p>You own <%= property.quantity %> <%= "unit".pluralize(property.quantity) %> 
            of <%= property.stock.symbol %> stock</li></p>

        <% else %>

					<li class="flex items-center gap-3 py-3">
            <span>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
              </svg>
            </span>
            <p>You do not own any <%= stock.symbol %> stock</p>
          </li>

				<% end %>

    </ul>

  <% end %>

  <% account = check[:account] %>

  <% if account %>

    <p class="py-3">Cannot show portfolio details because:</p>

    <ul>
    
      <% if !account.portfolio %>

        <li class="flex items-center gap-3 py-3">
          <span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
              <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
            </svg>
          </span>
          <p>Trader Portfolio is yet to be setup</p>
        </li>

      <% end %>
      <% if account.status == "pending" %>

        <li class="flex items-center gap-3 py-3">
          <span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
              <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.5a.75.75 0 010 1.5H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
            </svg>
          </span>
          <p>Trader Account is yet to be approved</p>
        </li>

      <% end %>
    
    </ul>

  <% end %>

</div>