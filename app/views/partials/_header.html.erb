<header class="navbar bg-neutral text-secondary">
  <div class="flex-1">
    <a href=<%= current_user.role == "trader" ? 
      "/trader/dashboard" : "/admin/dashboard" %>
      class="btn btn-ghost text-3xl">
      Eluder
    </a>
  </div>
  <div class="flex-none">
    <div class="dropdown dropdown-end text-gray-700">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <img src="https://placeimg.com/80/80/arch" />
        </div>
      </label>
      <div
        tabindex="0"
        class="mt-3 card card-compact dropdown-content w-60 bg-white shadow-md" >
        <div class="card-body">
          <span class="font-bold text-lg"><%= current_user.first_name %> <%= current_user.last_name %></span>
          <% if current_user.role == "trader" %>
            <% if current_user.status == "approved" %>
              <span class="badge border-0 text-xs bg-green-700 text-white uppercase font-bold">Approved</span>
            <% else %>
              <span class="badge border-0 text-xs bg-gray-500 text-white uppercase font-bold">Pending</span>
            <% end %>
            <span class="font-medium text-gray-500">Balance: 
              <span class="text-green-700"><%= format_currency(current_user.balance) %></span>
            </span>
          <% end %>
        </div>
        <div class="divider my-0 px-2"></div>
        <ul class="menu menu-compact p-2 shadow bg-base-100 rounded-box w-auto">
          <li>
            <%= link_to "Log Out", destroy_user_session_path, 
              data: { turbo_method: :delete },
              class: "hover:bg-red-400 active:bg-red-400 hover:text-white" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>